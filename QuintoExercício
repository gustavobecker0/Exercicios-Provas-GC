public class Main {
    public static void main(String[] args) {

        int notificacoes = 0;

        for(int i = 1; i <= 5; i++){
            if((i % 2) == 0){
                notificacoes += 2;
            }
            else notificacoes++;
        }

        // i = 2 ou 4 -> notificacoes = 4
        // i = 1, 3 e 5 -> notificacoes = 3
        //final = 4 + 3 = 7
        
        System.out.println("Numero de notificacoes: " + notificacoes);
    }
}
